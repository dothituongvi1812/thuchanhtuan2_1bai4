<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Thông tin cá nhân"
       android:textAlignment="center"
       android:background="#1E6E21"
       android:textSize="25dp"
       android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Họ tên: "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtHoten"
            android:layout_width="305dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="CMND: "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtCMND"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng cấp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:background="#2196F3"
        android:textColor="#FFEB3B"
        android:layout_marginTop="10dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioTrungCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung cấp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            />
        <RadioButton
            android:id="@+id/radioCaoDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao đẳng"
            android:layout_marginRight="20dp"
            android:textSize="15dp" />
        <RadioButton
            android:id="@+id/radioDaiHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại học"
            android:checked="true"
            android:layout_marginRight="20dp"
            android:textSize="15dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textSize="25dp"
        android:textAlignment="center"
        android:background="#2196F3"
        android:textColor="#FFEB3B"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkboxDocBao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc báo"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:padding="5dp"/>
        <CheckBox
            android:id="@+id/checkboxDocSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc sách"
            android:textSize="15dp"
            android:layout_marginRight="20dp"/>
        <CheckBox
            android:id="@+id/checkboxDocCoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc coding"
            android:textSize="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin bổ sung"
        android:textSize="25dp"
        android:textAlignment="center"
        android:background="#2196F3"
        android:textColor="#FFEB3B"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edtThongTin"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <Button
        android:id="@+id/buttonGuiThongTin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi thông tin"
        android:backgroundTint="#9C9B9B"
        android:layout_marginLeft="100dp"/>

</LinearLayout>